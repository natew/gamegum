    <%= form_for @message, :url => messages_path do |form| %>
      <%= render 'shared/error_messages', :target => @message %>
    
      <%= label :message, :reciepient, 'Recipient', :class => 'inline' %>
      <%= form.text_field :recipient, :class => 'titlefield text' %>
      <br />
    
      <%= label :message, :subject, 'Subject', :class => 'inline' %>
      <%= form.text_field :subject, :class => 'titlefield text' %>
      <br /><br />
      <%= form.text_area :body, :rows => 10 %><br />
    
      <%= submit_tag "Send Message", :class => 'submitbutton' %>
    <% end %>