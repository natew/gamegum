<% content_for(:title, @title) %>
<%= render :partial => 'nav' %>

  <div class="twothirds">
    <% if false %>
      <div class="leaderboard">
        <%= render :partial => 'shared/ad_leaderboard' %>
      </div>
    <% end %>
  
    <h2>Top Tags</h2>
    <ul class="tags">
      <% tag_cloud(@tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class| %>
        <li><%= link_to tag.name, { :action => :tag, :id => tag.name }, :class => css_class %></li>
      <% end %>
    </ul>
  </div>

<%= render :partial => 'side' %>