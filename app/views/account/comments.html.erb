<% content_for(:title, 'My Comments') %>
<%= render :partial => 'nav' %>

  <div class="contain">
    <%- unless @comments.empty? -%>
      <ul class="comments">
      <%= render :partial => 'shared/comment', :collection => @comments %>
      </ul>
      <%= will_paginate @comments %>
    <%- else -%>
      <h3>No comments</h3>
    <%- end -%>
  </div>